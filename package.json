{
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "name": "hefesto",
  "scripts": {
    "clean": "lerna clean -y && lerna bootstrap --hoist",
    "dev:hefesto": "lerna run dev --parallel --scope={@hefesto/server,@hefesto/scripts,@hefesto/configuration,@hefesto/view}",
    "build:hefesto": "lerna run build --stream --scope={@hefesto/server,@hefesto/scripts,@hefesto/configuration,@hefesto/view}",
    "tsc:hefesto": "lerna run build --parallel --scope={@hefesto/server,@hefesto/scripts,@hefesto/configuration}",
    "watch:hefesto": "lerna run dev --parallel --scope={@hefesto/server,@hefesto/scripts,@hefesto/configuration}"
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  }
}
